<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">
    <ImageButton
        android:src="@drawable/ic_reply_white_24dp"
        android:id="@+id/main_back"
        android:background="@null"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <ImageView
        android:id="@+id/main_logo"
        android:layout_below="@id/main_back"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_face_red_100_24dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/main_logo"
        android:orientation="vertical"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_height="400dp">
        <EditText
            android:layout_width="match_parent"
            android:hint="手机号/邮箱"
            android:textSize="14dp"
            android:background="@drawable/shape_button_top"
            android:layout_height="40dp" />
        <View
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:layout_height="1dp"/>
        <EditText
            android:layout_width="match_parent"
            android:hint="密码"
            android:textSize="14dp"
            android:background="@drawable/shape_button_los"
            android:layout_height="40dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:text="登录"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_height="48dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_height="20dp">
            <TextView
                android:text="忘记密码？"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentRight="true"
                android:text="注册账号"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_height="20dp">
            <View
                android:layout_toLeftOf="@+id/main_qita"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <TextView
                android:id="@+id/main_qita"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:text="使用其他账号登录"
                android:layout_centerHorizontal="true"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_toRightOf="@+id/main_qita"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_pets_red_100_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:gravity="center_horizontal"
                    android:text="微博"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_polymer_red_100_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="微信"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_thumbs_up_down_red_100_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="GITHUB"
                    android:textColor="@color/gray" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_alignParentBottom="true"
        android:text="xx公司 xx.com"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>